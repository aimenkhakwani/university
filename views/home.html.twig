<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet" type="text/css">
    <title>University Registration</title>
  </head>
  <body>
      <div class="container">
          <h1>University Registration</h1>
          <div class="content">
              <div class="col-md-4">
                  <h3>Students:</h3>
                  {% if students is not empty %}
                  <ul>
                    {% for student in students %}
                    <li><a href="/thisstudent/{{ student.getId }}">{{ student.getName }}</a></li>
                    {% endfor %}
                    </ul>
                  {% endif %}
              </div>
              <div class="col-md-4">
                  <br>
                  <form action="/student" method="get">
                      <button class="btn btn-lg btn-danger" type="submit">Students</button>
                  </form>
                  <form action="/course" method="get">
                      <button class="btn btn-lg btn-primary" type="submit">Courses</button>
                  </form>
              </div>
              <div class="col-md-4">
                  <h3>Courses:</h3>
                  {% if courses is not empty %}
                  <ul>
                    {% for course in courses %}
                    <li><a href="/thiscourse/{{ course.getId }}">{{ course.getName }}</a></li>
                    {% endfor %}
                    </ul>
                  {% endif %}
              </div>
          </div>
      </div>
  </body>
</html>

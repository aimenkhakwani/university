<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet" type="text/css">
    <title>University Registration</title>
  </head>
  <body>
      <div class="container">
          <h1>University Registration: Courses</h1>
          <div class="col-md-6">
              <h2>Add a Course</h2>
              <form action="/addcourse" method="post">
                  <input type="text" name="name" class="form-control" placeholder="Course Name">
                  <br>
                  <input type="text" name="course_number" class="form-control" placeholder="Course Number">
                  <br>
                  <button class="btn" type="submit">Add a Course</button>
              </form>
          </div>
          <div class="col-md-6">
              {% if courses is not empty %}
                <h2>Registered Courses</h2>
                    <ul>
                        {% for course in courses %}
                        <li><a href="/course/{{ course.getId }}">{{ course.getName }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                    <form action="/deletecourses" method="post">
                        <br>
                        <button class="btn" type="submit">Delete ALLL Courses</button>
                    </form>
              {% else %}
                <h2>Registered Courses: None</h2>
              {% endif %}
          </div>
      </div>
      <a href="/">Home</a>
  </body>
</html>

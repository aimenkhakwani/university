<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="/styles.css" rel="stylesheet" type="text/css">
    <title>University Registration</title>
  </head>
  <body>
      <div class="container">
          <h1>University Registration: Students</h1>
          <div class="col-md-6">
              <h2>Add a Student</h2>
              <form action="/addstudent" method="post">
                  <input type="text" name="name" class="form-control" placeholder="Student Name">
                  <br>
                  <input type="text" name="enroll_date" class="form-control" placeholder="Student Enroll Date">
                  <br>
                  <button class="btn" type="submit">Add a student</button>
              </form>
          </div>
          <div class="col-md-6">
              {% if students is not empty %}
                <h2>Registered Students</h2>
                    <ul>
                        {% for student in students %}
                        <li><a href="/student/{{ student.getId }}">{{ student.getName }}</a></li>
                        {% endfor %}
                    </ul>
                    <form action="/deletestudents" method="post">
                        <br>
                        <button class="btn" type="submit">Delete ALLL Students</button>
                    </form>
              {% else %}
                <h2>Registered Students: None</h2>
              {% endif %}
          </div>
      </div>
      <a href="/">Home</a>
  </body>
</html>
